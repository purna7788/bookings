{{template "base" .}}

{{define "content"}}

      <div class="container">
              <div class="row">
                      <div class="col-md-3"></div>
                      <div class="col-md-6">
                                <h1 class="mt-5">Search for availability</h1>    
                                <form action="reservation.html" class="needs-validation" novalidate method="get">
                                  <div class="form-row">                                      
                                              <div class="row"  id="reservation-dates">
                                                    <div class="col">
                                                      <input class="form-control" required type="text" name="start"  placeholder="arrival">   
                                                    </div>
                                                    <div class="col">
                                                      <input  class="form-control" required type="text" name="end" placeholder="departure">  
                                                    </div>
                                              </div>                             
                                  </div>                                
                                <hr>
                                  <button type="submit" class="btn btn-primary">Search Availability</button>
                                </form>
                      </div>  
              </div>
      </div>
{{end}}

{{define "js"}}
<script>
    const elem = document.getElementById('reservation-dates');
    const rangepicker = new DateRangePicker(elem, {
            format: "yyyy-mm-dd"
            }); 
</script>
{{end}}